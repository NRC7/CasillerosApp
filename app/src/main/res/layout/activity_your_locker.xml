<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorDetails"
    tools:context=".views.YourLockerActivity">

    <TextView
        android:fontFamily="sans-serif-black"
        android:id="@+id/yourLockerTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="8sp"
        android:layout_marginTop="110sp"
        android:layout_marginEnd="8sp"
        android:gravity="center"
        android:padding="8sp"
        android:text="Casillero Reservado"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="40sp"
        android:textStyle="bold" />

    <TextView
        android:fontFamily="sans-serif-black"
        android:id="@+id/yourIdTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/yourLockerTv"
        android:layout_centerInParent="true"
        android:layout_marginTop="24sp"
        android:gravity="center"
        android:padding="8sp"
        android:text="yourIdTv"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="22sp"
        android:textStyle="bold" />

    <TextView
        android:fontFamily="sans-serif-black"
        android:id="@+id/yourUserTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/yourIdTv"
        android:layout_centerInParent="true"
        android:layout_marginTop="24sp"
        android:gravity="center"
        android:padding="8sp"
        android:text="yourUserTv"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="22sp"
        android:textStyle="bold" />

</RelativeLayout>
